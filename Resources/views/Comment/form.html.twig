
<form
    class = "osbekro-comments-post-form"
    method = "post"
    action = "{{path('osbekro_comments_comment_create', {'id':form.vars.data.object.id})}}"
    data-thread-id = "{{form.vars.data.object.id}}"
>
{% if app.user %}
    {{form_widget(form.body, {'attr': {'class':'osbekro-comment-input'}})}}
    {{form_widget(form._token)}}
    <button type="submit">{{'Post comment'|trans}}</button>
    {% else %}
        <span class='osbekro-logged-message'>
            {{'You have to be logged in to post comment.'|trans}}
        </span>
    {% endif %}
</form>